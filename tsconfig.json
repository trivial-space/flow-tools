{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es2015", "es2016", "es2017", "dom"],
		"module": "es6",
		"moduleResolution": "node",
		"strict": true,
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"declaration": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"*": ["lib/*"]
		},
		"outDir": "dist"
	},
	"exclude": ["node_modules", "dist"],
	"compileOnSave": false,
	"buildOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	}
}
